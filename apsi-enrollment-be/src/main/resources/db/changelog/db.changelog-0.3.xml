
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="jlyskawa">
        <renameColumn
            oldColumnName="ORDER_ID"
            newColumnName="PROVIDER_ORDER_ID"
            tableName="PAYMENT"
            columnDataType="varchar2(1000)"/>
        <dropNotNullConstraint
            columnName="PROVIDER_ORDER_ID"
            tableName="PAYMENT"/>
        <addColumn tableName="PAYMENT">
            <column name="PROVIDER_REDIRECT_URL" type="varchar2(1000)"/>
        </addColumn>
        <addColumn tableName="PAYMENT">
            <column name="UUID" type="varchar2(256)">
                <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>